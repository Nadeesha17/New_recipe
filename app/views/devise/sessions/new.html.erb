<div class="container d-flex justify-content-center mt-5">
  <div class="col-md-6 shadow-sm p-4 bg-light rounded">
    <h2 class="text-center mb-4">Log In</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control mb-3" },
                    label_html: { class: "form-label" } %>

        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control mb-3" },
                    label_html: { class: "form-label" } %>

        <%= f.input :remember_me, as: :boolean, label: "Remember me", class: "mb-3" if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Log In", class: "btn btn-primary w-50" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
