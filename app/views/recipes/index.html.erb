<h1 class="text-center mb-4">Explore Recipes</h1>

<% if @recipes.present? %>
  <div class="container">
    <div class="row">
      <% @recipes.each do |recipe| %>
        <div class="col-md-4">
          <div class="card mb-4">
            <img src="<%= recipe['image'] %>" class="card-img-top" alt="<%= recipe['title'] %>" />
            <div class="card-body">
              <h5 class="card-title"><%= recipe['title'] %></h5>
              <p class="card-text"><%= recipe['summary']&.html_safe %></p>
              <a href="<%= recipe['sourceUrl'] %>" class="btn btn-primary" target="_blank">View Recipe</a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <p class="text-center">No recipes found. Please try again later.</p>
<% end %>
