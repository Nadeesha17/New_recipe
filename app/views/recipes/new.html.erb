<div class="card p-5 shadow-lg" style="max-width: 500px; margin: 50px auto;">
  <h2 class="text-center mb-4">Add a New Recipe</h2>

  <%= form_with model: @recipe, local: true, class: "p-3" do |form| %>
    <div class="mb-3">
      <%= form.label :name, "Recipe Name", class: "form-label" %>
      <%= form.text_field :name, required: true, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :ingredients, "Ingredients (comma-separated)", class: "form-label" %>
      <%= form.text_field :ingredients, value: @recipe.ingredients.map(&:name).join(", "), class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :instructions, "Instructions", class: "form-label" %>
      <%= form.text_area :instructions, required: true, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :image, "Recipe Image", class: "form-label" %>
      <%= form.file_field :image, class: "form-control" %>
    </div>

    <div class="d-grid">
      <%= form.submit "Add Recipe", class: "btn btn-primary" %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <%= link_to 'Back to Recipes', recipes_path, class: "btn btn-secondary" %>
  </div>
</div>
