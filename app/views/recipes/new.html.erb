<div class="card p-5 shadow-lg" style="width: 100%; max-width: 600px; margin-left: 55%; padding-top: 100px; border-radius: 15px; box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);">
  <h2 class="text-center mb-4 add-recipe-title">Add a New Recipe</h2>

  <%= form_with model: @recipe, local: true, class: "p-3" do |form| %>
    <div class="mb-3">
      <%= form.label :name, "Recipe Name", class: "form-label" %>
      <%= form.text_field :name, required: true, class: "form-control form-input" %>
    </div>

    <div class="mb-3">
      <%= form.label :ingredients, "Ingredients (comma-separated)", class: "form-label" %>
      <%= form.text_field :ingredients, value: @recipe.ingredients.map(&:name).join(", "), class: "form-control form-input" %>
    </div>

    <div class="mb-3">
      <%= form.label :instructions, "Instructions", class: "form-label" %>
      <%= form.text_area :instructions, required: true, class: "form-control form-textarea" %>
    </div>

    <div class="mb-3">
      <%= form.label :image, "Recipe Image", class: "form-label" %>
      <%= form.file_field :image, class: "form-control form-input" %>
    </div>

    <div class="d-grid">
      <%= form.submit "Add Recipe", class: "btn explore-btn btn-lg px-5 py-3 rounded-pill shadow-sm" %>
    </div>
  <% end %>

  <div class="mt-3 text-center">
    <%= link_to '<< Back', recipes_path, class: "btn-see-more"%>
  </div>
</div>
