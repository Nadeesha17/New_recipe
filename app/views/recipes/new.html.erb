<div class="container my-5 p-4 shadow-lg rounded" style="background-color: #f8f9fa; max-width: 600px;">
  <!-- Form Title -->
  <h2 class="text-center mb-4">Add a New Recipe</h2>

  <%= form_with model: @recipe, local: true, class: "needs-validation" do |form| %>
    <!-- Recipe Name -->
    <div class="mb-3">
      <%= form.label :name, "Recipe Name", class: "form-label fw-bold" %>
      <%= form.text_field :name, class: "form-control p-2 rounded-3", placeholder: "Enter recipe name", required: true %>
    </div>

    <!-- Ingredients -->
    <div class="mb-3">
      <%= form.label :ingredients, "Ingredients (comma-separated)", class: "form-label fw-bold" %>
      <%= form.text_field :ingredients, class: "form-control p-2 rounded-3", placeholder: "e.g., tomatoes, onions, garlic", required: true %>
      <small class="text-muted">Separate ingredients with commas.</small>
    </div>

    <!-- Instructions -->
    <div class="mb-3">
      <%= form.label :instructions, "Instructions", class: "form-label fw-bold" %>
      <%= form.text_area :instructions, class: "form-control p-3 rounded-3", placeholder: "Step-by-step instructions", rows: 5, required: true %>
    </div>

    <!-- Recipe Image -->
    <div class="mb-4">
      <%= form.label :image, "Recipe Image", class: "form-label fw-bold" %>
      <%= form.file_field :image, class: "form-control p-2 rounded-3" %>
    </div>

    <!-- Submit Button -->
    <div class="d-grid">
      <%= form.submit "Add Recipe", class: "btn btn-success btn-lg rounded-pill" %>
    </div>
  <% end %>

  <!-- Back Link -->
  <div class="text-center mt-3">
    <%= link_to 'Back to Recipes', recipes_path, class: "btn btn-secondary rounded-pill" %>
  </div>
</div>
