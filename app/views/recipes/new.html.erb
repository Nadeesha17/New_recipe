<!-- app/views/recipes/new.html.erb -->
<div class="container">
  <h2>Create a New Recipe</h2>

  <%= form_with model: @recipe, local: true do |form| %>

    <div class="form-group">
      <%= form.label :name, "Recipe Name" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :ingredients, "Ingredients" %>
      <%= form.text_area :ingredients, class: "form-control", rows: 3 %>
    </div>

    <div class="form-group">
      <%= form.label :instructions, "Instructions" %>
      <%= form.text_area :instructions, class: "form-control", rows: 5 %>
    </div>

    <div class="form-group">
      <%= form.label :meal_type, "Meal Type (e.g., Breakfast, Dinner)" %>
      <%= form.text_field :meal_type, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :cuisine, "Cuisine (e.g., Italian, Chinese)" %>
      <%= form.text_field :cuisine, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :cooking_method, "Cooking Method (e.g., Fry, Boil)" %>
      <%= form.text_field :cooking_method, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :dietary_restrictions, "Dietary Restrictions (e.g., Vegan, Gluten-Free)" %>
      <%= form.text_field :dietary_restrictions, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit "Create Recipe", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
