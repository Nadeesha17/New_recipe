<div class="container mt-5">
  <div class="card shadow-lg">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0 text-center"><%= @recipe['title'] %></h2>
    </div>
    <div class="card-body">
      <% if @recipe['image'] %>
        <div class="text-center mb-4">
          <img src="<%= @recipe['image'] %>" alt="<%= @recipe['title'] %>" class="img-fluid rounded">
        </div>
      <% end %>

      <h4>Recipe Details</h4>
      <ul class="list-group mb-4">
        <li class="list-group-item"><strong>Ready in:</strong> <%= @recipe['readyInMinutes'] %> minutes</li>
        <li class="list-group-item"><strong>Servings:</strong> <%= @recipe['servings'] %></li>
      </ul>

      <h4>Ingredients:</h4>
      <% if @recipe['extendedIngredients'] %>
        <ul class="list-group mb-4">
          <% @recipe['extendedIngredients'].each do |ingredient| %>
            <li class="list-group-item"><%= ingredient['original'] %></li>
          <% end %>
        </ul>
      <% else %>
        <p>No ingredients available.</p>
      <% end %>

      <h4>Instructions:</h4>
      <p class="mb-4"><%= @recipe['instructions'].presence || "Instructions not available." %></p>

      <a href="/" class="btn btn-secondary">Back to Recipes</a>
    </div>
  </div>
</div>
