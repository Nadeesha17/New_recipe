<div class="container my-5 p-4 shadow-lg rounded" style="background-color: #f8f9fa;">
  <!-- Recipe Title -->
  <h2 class="text-center mb-4">
    <% if @recipe.is_a?(Recipe) %>
      <%= @recipe.name %>
    <% else %>
      <%= @recipe['title'] %>
    <% end %>
  </h2>

  <!-- Recipe Image -->
  <div class="text-center mb-4">
    <% if @recipe.is_a?(Recipe) %>
      <img src="<%= @recipe.image_url %>" alt="<%= @recipe.name %>" class="img-fluid rounded" style="max-width: 400px;">
    <% else %>
      <img src="<%= @recipe['image'] %>" alt="<%= @recipe['title'] %>" class="img-fluid rounded" style="max-width: 400px;">
    <% end %>
  </div>

  <!-- Ingredients Section -->
  <div class="mb-4">
    <h4 class="fw-bold">Ingredients:</h4>
    <ul class="list-group list-group-flush">
      <% if @recipe.is_a?(Recipe) %>
        <% @recipe.ingredients.each do |ingredient| %>
          <li class="list-group-item"><%= ingredient.name %></li>
        <% end %>
      <% else %>
        <% @recipe['extendedIngredients']&.each do |ingredient| %>
          <li class="list-group-item"><%= ingredient['name'] %></li>
        <% end %>
      <% end %>
    </ul>
  </div>

  <!-- Instructions Section -->
  <div>
    <h4 class="fw-bold">Instructions:</h4>
    <p class="text-justify" style="line-height: 1.7;">
      <% if @recipe.is_a?(Recipe) %>
        <%= @recipe.instructions %>
      <% else %>
        <%= @recipe['instructions'].presence || "Instructions not available." %>
      <% end %>
    </p>
  </div>

  <!-- Back Button -->
  <div class="text-center mt-4">
    <%= link_to 'Back to Recipes', recipes_path, class: "btn btn-secondary rounded-pill px-4 py-2" %>
  </div>
</div>
