<h1 class="text-center mb-4">Find Recipes by Ingredients</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with url: recipe_ingredient_path, method: :get, local: true do |f| %>
        <div class="mb-3">
          <label for="ingredients" class="form-label">Enter Ingredients (comma separated):</label>
          <%= f.text_field :ingredients, placeholder: "e.g., chicken, onion, garlic", class: "form-control" %>
        </div>
        <%= f.submit "Search", class: "btn btn-primary w-100" %>
      <% end %>
    </div>
  </div>
</div>

<% if @recipes.present? %>
  <h2 class="text-center my-4">Recipes Found</h2>
  <div class="container">
    <div class="row">
      <% @recipes.each do |recipe| %>
        <div class="col-md-4">
          <div class="card mb-4">
            <img src="<%= recipe['image'] %>" class="card-img-top" alt="<%= recipe['title'] %>" />
            <div class="card-body">
              <h5 class="card-title"><%= recipe['title'] %></h5>
              <p class="card-text"><%= recipe['instructions'] %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <p class="text-center">No recipes found. Try different ingredients.</p>
<% end %>
